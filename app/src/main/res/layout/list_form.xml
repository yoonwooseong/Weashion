<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#FFF9F1"
    android:layout_margin="5dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_centerVertical="true"
        android:id="@+id/cate_img"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cate_img"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="브랜드"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/list_form_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textSize="13dp"
            android:textColor="#454343"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/list_form_title2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textColor="#757571"
            android:textSize="13dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/list_form_title3"/>
    </LinearLayout>


</RelativeLayout>